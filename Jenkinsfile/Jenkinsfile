def COLOR_MAP = [
    'SUCCESS': 'good',
    'FAILURE': 'danger',
]

pipeline {
    agent any

    tools {
        nodejs 'node16'
        jdk 'jdk17'
    }

    environment {
        SCANNER_HOME = tool 'sonar-scanner'

        registryCredential = 'ecr:us-west-1:awscreds'
        IMAGE_NAME = '715841342014.dkr.ecr.us-west-1.amazonaws.com/flipkartimg'
        flipkartRegistry = "https://715841342014.dkr.ecr.us-west-1.amazonaws.com"
    }

    stages {

        stage("Clean Workspace") {
            steps { cleanWs() }
        }

        stage("Git Checkout") {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Yash11max/flipkart-devsecops-eks-gitops.git'
            }
        }

        stage('Install Dependencies') {
            steps { sh "npm install" }
        }

        stage("Sonarqube Analysis") {
            steps {
                withSonarQubeEnv('sonar-server') {
                    sh """
                        ${SCANNER_HOME}/bin/sonar-scanner \
                        -Dsonar.projectName=flipkart \
                        -Dsonar.projectKey=flipkart
                    """
                }
            }
        }

        stage("Quality Gate") {
            steps {
                script {
                    timeout(time: 5, unit: 'MINUTES') {
                        waitForQualityGate abortPipeline: true,
                            credentialsId: 'sonar-token'
                    }
                }
            }
        }

        // âœ… OWASP Dependency-Check (USES NVD API KEY SECURELY)
        stage("OWASP Dependency Check Scan") {
            steps {
                withCredentials([string(credentialsId: 'nvd-api-key', variable: 'NVD_API_KEY')]) {
                    dependencyCheck(
                        odcInstallation: 'dp-check',
                        additionalArguments: """
                            --scan .
                            --disableYarnAudit
                            --disableNodeAudit
                            --nvdApiKey=${NVD_API_KEY}
                            --data ./dc-data
                        """
                    )
                }
                dependencyCheckPublisher pattern: '**/dependency-check-report.xml'
            }
        }

        stage('Docker Scout FS') {
            steps {
                script {
                    withCredentials([string(credentialsId: 'docker-cred', variable: 'dockerpwd')]) {
                        sh "docker login -u harishnshetty -p ${dockerpwd}"
                        sh "docker-scout quickview fs://. > quickview-report.txt"
                        sh "docker-scout cves fs://. > cves-report.txt"
                    }
                }
                archiveArtifacts artifacts: '*.txt, *.json', fingerprint: true
            }
        }

        stage("Build Docker Image") {
            steps {
                script {
                    env.IMAGE_TAG = "harishnshetty/flipkart:${BUILD_NUMBER}"
                    sh "docker rmi -f flipkart ${env.IMAGE_TAG} || true"
                    sh "docker build -t flipkart ."
                }
            }
        }

        stage('Docker Scout Image') {
            steps {
                script {
                    withCredentials([string(credentialsId: 'docker-cred', variable: 'dockerpwd')]) {
                        sh "docker login -u harishnshetty -p ${dockerpwd}"
                        sh "docker-scout cves flipkart > image-cves-report.txt"
                        sh "docker-scout recommendations flipkart > image-recommendations.txt"
                    }
                }
                archiveArtifacts artifacts: '*.txt, *.json', fingerprint: true
            }
        }

        stage("Upload App Image to ECR") {
            steps {
                script {
                    sh """
                        docker tag flipkart ${IMAGE_NAME}:${BUILD_NUMBER}
                        docker tag flipkart ${IMAGE_NAME}:latest
                    """
                    docker.withRegistry(flipkartRegistry, registryCredential) {
                        def img = docker.image("${IMAGE_NAME}")
                        img.push("${BUILD_NUMBER}")
                        img.push("latest")
                    }
                }
            }
        }

        stage("Tag & Push to DockerHub") {
            steps {
                script {
                    withCredentials([string(credentialsId: 'docker-cred', variable: 'dockerpwd')]) {
                        sh "docker login -u harishnshetty -p ${dockerpwd}"
                        sh "docker tag flipkart ${env.IMAGE_TAG}"
                        sh "docker push ${env.IMAGE_TAG}"
                        sh "docker tag flipkart harishnshetty/flipkart:latest"
                        sh "docker push harishnshetty/flipkart:latest"
                        sh "docker logout"
                    }
                }
            }
        }

        stage("Deploy to Container") {
            steps {
                sh "docker rm -f flipkart || true"
                sh "docker run -d --name flipkart -p 80:80 ${env.IMAGE_TAG}"
            }
        }

        stage("DAST Scan with OWASP ZAP") {
            steps {
                script {
                    def exitCode = sh(script: '''
                        docker run --rm --user root --network host -v $(pwd):/zap/wrk:rw \
                        zaproxy/zap-stable zap-baseline.py \
                        -t http://localhost \
                        -r zap_report.html -J zap_report.json
                    ''', returnStatus: true)
                    echo "ZAP scan exit code: ${exitCode}"
                }
            }
            post {
                always {
                    archiveArtifacts artifacts: 'zap_report.html,zap_report.json', allowEmptyArchive: true
                }
            }
        }
    }

    post {
        always {
            script {
                def buildStatus = currentBuild.currentResult
                def buildUser = currentBuild.getBuildCauses('hudson.model.Cause$UserIdCause')[0]?.userId ?: 'GitHub User'

                slackSend(
                    channel: '#devsecops',
                    color: COLOR_MAP[buildStatus],
                    message: """*${buildStatus}:* Job *${env.JOB_NAME}* Build #${env.BUILD_NUMBER}
ðŸ‘¤ *Started by:* ${buildUser}
ðŸ”— *Build URL:* <${env.BUILD_URL}|Click Here>"""
                )

                emailext(
                    subject: "Pipeline ${buildStatus}: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                    to: 'shankhwalkary11@gmail.com',
                    from: 'shankhwalkary11@gmail.com',
                    mimeType: 'text/html',
                    body: """
                        <p>Flipkart DevSecOps CI/CD status</p>
                        <p>Build: ${env.BUILD_NUMBER}</p>
                        <p>Status: ${buildStatus}</p>
                        <p><a href="${env.BUILD_URL}">${env.BUILD_URL}</a></p>
                    """,
                    attachmentsPattern: 'quickview-report.txt,cves-report.txt,image-cves-report.txt,image-recommendations.txt,dependency-check-report.xml,zap_report.html,zap_report.json'
                )
            }
        }
    }
}
